#include<stdio.h>
#include<math.h>
#include<stdbool.h>
#include<stdlib.h>
int main()
{
    while(1)
    {
        int n,m;
        printf("Enter the Starting Point: ");
        scanf("%d",&m);
        printf("Fnter the Ending value: ");
        scanf("%d",&n);

        int count=0;
        int sumOfPrime=0;

        for(int i=m; i<=n;i++)
        {
            int isPrime=1;

            for(int j=2;j*j<=i;j++)
            {
                if(i%j==0)
                {
                    isPrime=0;

                    break;
                }
            }
            if(isPrime == 1){
                    printf("%d is a prime number\n",i);
                    count++;
                    sumOfPrime+=i;
                    printf("\n");

                    }

            }
            printf("The Total Number of Prime: %d\n",count);
            printf("The Sum of Prime Number: %d\n",sumOfPrime);

        }

}
