#include<stdio.h>
#include<math.h>
int main()
{
    while(1)
    {
        int n1,n2,rem,num1,num2;

        printf("Give the value of num1: ");
        scanf("%d",&num1);
        printf("Give the value of num2: ");
        scanf("%d",&num2);

        n1=num1;
        n2=num2;

        while(n2!=0){
            rem=n1%n2;
            n1=n2;
            n2=rem;
        }

        int lcm=(num1*num2)/n1;

        printf("The LCM is: %d\n",lcm);
        printf("The GCD is: %d\n",n1);

    }

}
