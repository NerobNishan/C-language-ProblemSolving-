#include<bits/stdc++.h>
using namespace std;

void merge(int a[],int start, int mid,int end){
    int i=start;
    int j=mid+1;
    int k=0;
    int s = end-start+1;
    int b[s];

    while(i<=mid && j<=end){
        if(a[i]<=a[j]){
            b[k]=a[i];
            i++;
        }else{
            b[k]=a[j];
            j++;
        }
        k++;
    }
    while(i<=mid){
        b[k]=a[i];
        i++;
        k++;
    }
    while(j<=end){
        b[k]=a[j];
        j++;
        k++;
    }
    for(k=0;k<s;k++){
        a[start+k]=b[k];
    }
}

void mergeSort(int arr[],int start, int end){
    if(start<end)
    {
        int mid = start + (end - start)/2;

        mergeSort(arr,start,mid);
        mergeSort(arr,mid+1,end);

        merge(arr,start,mid,end);
    }
}

int main(){
    int n;
    cout<<"Enter the Number of Elements: "<<endl;
    cin>>n;

    int a[n];
    cout<<"Enter the Value: "<<endl;
    for(int i=0;i<n;i++){
        cin>>a[i];
    }

    cout<<"Sorted Array: ";
    mergeSort(a,0,n-1);

    for(int i=0;i<n;i++){
        cout<<a[i]<<" ";
    }
}


