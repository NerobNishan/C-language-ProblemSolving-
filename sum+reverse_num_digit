
#include<stdio.h>
#include<ctype.h>
#include<math.h>
int main()
{
    while(1)
    {
        int num;
        printf("Give any integer Number: ");
        scanf("%d",&num);

        int temp=num; //As orginal number don't change
        int sum=0;
        int revSum=0;

        while(temp!=0)
        {
            int reminder=temp%10;
            sum=sum+reminder;
            revSum=revSum*10+reminder;
            temp=temp/10;
        }
        printf("The Sum of Digits: %d\n",sum);
        printf("The Reverse of Number: %d\n",revSum);
    }
}
