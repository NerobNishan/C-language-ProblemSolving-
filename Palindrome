
#include<stdio.h>
#include<ctype.h>
#include<math.h>
int main()
{
    while(1)
    {
        int num;
        printf("Give any integer Number: ");
        scanf("%d",&num);

        int temp=num; //As orginal number don't change
        int revSum=0;

        while(temp!=0)
        {
            int reminder=temp%10;
            revSum=revSum*10+reminder;
            temp=temp/10;
        }
        printf("The Reverse of Number: %d\n",revSum);
        if(revSum==num)
            printf("%d is a Palindrome\n",revSum);
        else
            printf("%d is not a Palindrome\n",revSum);
    }
}
