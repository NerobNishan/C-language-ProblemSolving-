#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int main(){
    double num1,num2;
    char op;
    printf("Give the Operator + - / *: \n");
    scanf("%c",&op);
    printf("Give the value: \n");
    scanf("%lf %lf",&num1,&num2);

    switch(op)
    {
        case'+':
        printf("%lf + %lf = %.2lf",num1,num2,num1+num2);
        break;

        case'-':
        printf("%lf - %lf = %.2lf",num1,num2,num1-num2);
        break;

        case'*':
        printf("%lf * %lf = %.2lf",num1,num2,num1*num2);
        break;

        case'/':
        printf("%lf / %lf = %.2lf",num1,num2,num1/num2);
        break;

        default:
            printf("Invalid Input");
    }

}
