#include<stdio.h>
int main()
{
    while(1)
    {
        int n;
        printf("Give any integer value: ");
        scanf("%d",&n);
        for(int i=0;i<=n;i++)
        {
            for(int k=0;k<=i;k++){
                printf("  ");
            }
            for(int j=n-i;j>=1;j--)
            {
                printf("%d",j);
                printf(" ");
            }
            for(int l=2;l<=n-i;l++)
            {
                printf("%d",l);
                printf(" ");
            }

            printf("\n");
        }
    }
}
